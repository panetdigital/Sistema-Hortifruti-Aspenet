@model NovoProjetoFrutas.Model.Produto

@{
    ViewData["Title"] = "Novo Produto";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">


    <h4>Criar-Novo Produto</h4>
<hr />

    
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cod" class="control-label"></label>
                <input asp-for="Cod" class="form-control" />
                <span asp-validation-for="Cod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodItem" class="control-label"></label>
                <input asp-for="CodItem" class="form-control" />
                <span asp-validation-for="CodItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoPromo" class="control-label"></label>
                <input asp-for="PrecoPromo" class="form-control" />
                <span asp-validation-for="PrecoPromo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grupo" class="control-label"></label>
                <input asp-for="Grupo" class="form-control" />
                <span asp-validation-for="Grupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstoqueDisponivel" class="control-label"></label>
                <input asp-for="EstoqueDisponivel" class="form-control" />
                <span asp-validation-for="EstoqueDisponivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagem" class="control-label"></label>
                <input asp-for="Imagem" class="form-control" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                 <a asp-action="Index" class="btn btn-secondary">Retorna</a>
            </div>
        </form>
   

</div>
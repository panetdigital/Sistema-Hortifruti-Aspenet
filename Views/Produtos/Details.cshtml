@model NovoProjetoFrutas.Model.Produto

@{
    ViewData["Title"] = "Details";
    
}
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-3">Details</h1>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Produto</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cod)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cod)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CodItem)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CodItem)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrecoPromo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecoPromo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Grupo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Grupo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EstoqueDisponivel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EstoqueDisponivel)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Link)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Link)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Imagem)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Imagem)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index"  class="btn btn-secondary">Retorno</a>
       
    </div>
</div>
